<!-- views/layouts/auth-layout.ejs -->

<!DOCTYPE html>
<html
  data-wf-page="<%= wfPage %>"
  data-wf-site="66b93fd9c65755b8a91df144"
  data-wf-status="1"
  lang="en"
  data-wf-locale="en"
>
  <head>
    <meta charset="utf-8" />
    <title><%= title %> | Kottin - Let's Get Your Freak On</title>
    <%- include("../partials/header") %> <%- include("../partials/meta-noindex") %>
  </head>

  <body>
    <div class="page-wrapper">
      <!-- Header -->
      <div
        data-w-id="c5a10a2d-1ce6-df65-3882-e8a1991bf291"
        data-animation="default"
        data-collapse="medium"
        data-duration="400"
        data-easing="ease"
        data-easing2="ease"
        role="banner"
        class="header-wrapper w-nav"
      >
        <div class="container-default w-container">
          <div class="header-container-wrapper" data-w-id="c5a10a2d-1ce6-df65-3882-e8a1991bf293">
            <!-- Logo -->
            <div class="logo-wrapper">
              <a href="/home" class="logo-link w-inline-block">
                <img src="/assets/images/kottin-logo-black.png" alt="Logo" />
              </a>
            </div>

            <!-- Main Nav -->
            <div class="nav-menu-middle"><%- include("../partials/auth-navbar") %></div>

            <!-- Right Side -->
            <div class="nav-menu-right-side">
              <%- include("../partials/cart") %>
              <div class="buttons-row nav-menu-hidden-on-mobile">
                <a
                  id="w-node-e9da5fd6-ab44-5b2f-81ad-6e5f36bfab9c-36bfab9c"
                  href="/shop"
                  class="primary-button w-inline-block"
                >
                  <div>Shop now</div>
                </a>
              </div>

              <!-- Account Dropdown -->
              <%- include("../partials/account-dropdown") %>

              <!-- Hamburger -->
              <div class="hamburger-menu w-nav-button">
                <div class="hamburger-menu-flex">
                  <div class="hamburger-menu-line top"></div>
                  <div class="hamburger-menu-line middle"></div>
                  <div class="hamburger-menu-line bottom"></div>
                </div>
              </div>
            </div>
          </div>
        </div>
      </div>

      <!-- Main Content -->
      <section class="section pd-120px full-height">
        <div class="container-default width-100">
          <div class="inner-container _1312px center">
            <div class="w-layout-grid grid-2-columns _404-grid-2-col">
              <%- body %>

              <!-- Auth Image Carousel -->
              <div
                data-w-id="54664585-c52a-0b82-f98d-28a06e375587"
                class="inner-container _592px _100-tablet"
              >
                <div class="carousel-wrapper">
                  <div class="carousel-track" id="carouselTrack">
                    <!-- Slide 1 -->
                    <div class="carousel-slide">
                      <img
                        src="/assets/images/image1-2368w.png"
                        loading="eager"
                        sizes="(max-width: 991px) 100vw, (max-width: 1439px) 53vw, 590.1875px"
                        srcset="
                          /assets/images/image1-500w.png   500w,
                          /assets/images/image1-800w.png   800w,
                          /assets/images/image1-1080w.png 1080w,
                          /assets/images/image1-1600w.png 1600w,
                          /assets/images/image1-2368w.png 2368w
                        "
                        alt="Minimalist clothing brand Kottin - sustainable everyday wear"
                        class="_w-h-100 fit-cover"
                      />
                    </div>

                    <!-- Slide 2 -->
                    <div class="carousel-slide">
                      <img
                        src="/assets/images/image2-2368w.png"
                        loading="eager"
                        sizes="(max-width: 991px) 100vw, (max-width: 1439px) 53vw, 590.1875px"
                        srcset="
                          /assets/images/image2-500w.png   500w,
                          /assets/images/image2-800w.png   800w,
                          /assets/images/image2-1080w.png 1080w,
                          /assets/images/image2-1600w.png 1600w,
                          /assets/images/image2-2368w.png 2368w
                        "
                        alt="High-quality neutral apparel by Kottin"
                        class="_w-h-100 fit-cover"
                      />
                    </div>

                    <!-- Slide 3 -->
                    <div class="carousel-slide">
                      <img
                        src="/assets/images/image3-2368w.png"
                        loading="eager"
                        sizes="(max-width: 991px) 100vw, (max-width: 1439px) 53vw, 590.1875px"
                        srcset="
                          /assets/images/image3-500w.png   500w,
                          /assets/images/image3-800w.png   800w,
                          /assets/images/image3-1080w.png 1080w,
                          /assets/images/image3-1600w.png 1600w,
                          /assets/images/image3-2368w.png 2368w
                        "
                        alt="Timeless minimalist fashion - Kottin essential pieces"
                        class="_w-h-100 fit-cover"
                      />
                    </div>
                  </div>

                  <!-- Navigation Arrows -->
                  <button class="carousel-arrow prev" id="prevBtn" aria-label="Previous slide">
                    ‹
                  </button>
                  <button class="carousel-arrow next" id="nextBtn" aria-label="Next slide">
                    ›
                  </button>

                  <!-- Dot Navigation -->
                  <div class="carousel-dots" id="carouselDots"></div>
                </div>
              </div>
            </div>
          </div>
        </div>
      </section>

      <!-- Footer -->
      <%- include('../partials/footer') %>
    </div>

    <!-- Scripts -->
    <!-- Page specific Scripts-->
    <%- typeof scripts !== 'undefined' ? scripts : '' %>

    <!-- Vendor Scripts -->
    <script src="/js/jquery-3.5.1.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/axios/dist/axios.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/sweetalert2@11"></script>
    <script src="https://unpkg.com/feather-icons"></script>
    <script src="/js/index.js"></script>
    <script src="/js/vendor-ready.js"></script>

    <script>
      window.addEventListener("load", () => {
        feather.replace();
      });
    </script>

    <script>
      document.addEventListener("DOMContentLoaded", () => {
        const forms = document.querySelectorAll("form");
        forms.forEach((form) => {
          form.setAttribute("novalidate", "true");
        });
      });
    </script>
  </body>
</html>
