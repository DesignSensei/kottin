<!-- views/layouts/auth-layout.ejs -->

<!DOCTYPE html>

<html
  data-wf-page="66b93fd9c65755b8a91df18e"
  data-wf-site="66b93fd9c65755b8a91df144"
  data-wf-status="1"
  lang="en"
  data-wf-locale="en"
>
  <head>
    <meta charset="utf-8" />
    <title><%= title %> | Freakum - Let's Get Your Freak On</title>

    <%- include("../partials/header") %>
  </head>

  <body>
    <!-- Flash Message -->
    <!-- Error -->
    <% if (flash.error && flash.error.length) { %>
    <div class="alert alert-danger"><%= flash.error[0] %></div>
    <% } %>

    <!-- Success -->
    <% if (flash.success && flash.success.length) { %>
    <div class="alert alert-success"><%= flash.success[0] %></div>
    <% } %>

    <div class="page-wrapper">
      <div
        data-w-id="c5a10a2d-1ce6-df65-3882-e8a1991bf291"
        data-animation="default"
        data-collapse="medium"
        data-duration="400"
        data-easing="ease"
        data-easing2="ease"
        role="banner"
        class="header-wrapper w-nav"
      >
        <div class="container-default w-container">
          <div
            class="header-container-wrapper"
            data-w-id="c5a10a2d-1ce6-df65-3882-e8a1991bf293"
          >
            <!-- Logo -->
            <div class="logo-wrapper">
              <a href="/home" class="logo-link w-inline-block">
                <img src="assets/images/freakum-logo.png" alt="Logo" />
              </a>
            </div>

            <!-- Main Nav -->
            <div class="nav-menu-middle">
              <%- include("../partials/shop-navbar") %>
            </div>

            <!-- Right Side: cart, CTA, hamburger -->
            <div class="nav-menu-right-side">
              <%- include("../partials/cart") %>
              <div class="buttons-row nav-menu-hidden-on-mobile">
                <a
                  id="w-node-e9da5fd6-ab44-5b2f-81ad-6e5f36bfab9c-36bfab9c"
                  href="/shop-pages/all-products-v1"
                  class="primary-button w-inline-block"
                  ><div>Shop now</div></a
                >
              </div>
              <div class="hamburger-menu w-nav-button">
                <div class="hamburger-menu-flex">
                  <div class="hamburger-menu-line top"></div>
                  <div class="hamburger-menu-line middle"></div>
                  <div class="hamburger-menu-line bottom"></div>
                </div>
              </div>
            </div>
          </div>
        </div>
      </div>

      <section class="section pd-120px full-height">
        <div class="container-default width-100">
          <div class="inner-container _1312px center">
            <div class="w-layout-grid grid-2-columns _404-grid-2-col">
              <!--begin::Body-->
              <%- body %>
              <!--end::Body-->

              <!-- Image Column -->
              <div
                data-w-id="54664585-c52a-0b82-f98d-28a06e375587"
                class="inner-container _592px _100-tablet"
                style="
                  opacity: 0;
                  transform: translate3d(0, 10%, 0) scale3d(1, 1, 1);
                "
              >
                <div class="image-wrapper border-radius-16px">
                  <img
                    src="/assets/images/auth-image-2368w.png"
                    loading="eager"
                    sizes="(max-width: 991px) 100vw, (max-width: 1439px) 53vw, 590.1875px"
                    srcset="
                      /assets/images/auth-image-500w.png   500w,
                      /assets/images/auth-image-800w.png   800w,
                      /assets/images/auth-image-1080w.png 1080w,
                      /assets/images/auth-image-1600w.png 1600w,
                      /assets/images/auth-image-2368w.png 2368w
                    "
                    alt="Seamless pattern of various pink adult toys and accessories on a light pink background, with repeated “18+” symbols"
                    class="_w-h-100 fit-cover"
                  />
                </div>
              </div>
            </div>
          </div>
        </div>
      </section>

      <!-- Footer -->
      <%- include('../partials/footer') %>

      <!-- Feather Icons Script -->
      <script src="https://unpkg.com/feather-icons"></script>
      <script>
        window.addEventListener("load", () => {
          feather.replace();
        });
      </script>
    </div>

    <!-- Scripts -->
    <script src="/js/jquery-3.5.1.min.js"></script>
    <script src="/js/index.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/sweetalert2@11"></script>

    <!-- Bootstrap JS Bundle (includes Popper) -->
    <script
      src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"
      integrity="sha384-YvpcrYf0tY3lHB60NNkmXc5s9fDVZLESaAA55NDzOxhy9GkcIdslK1eN7N6jIeHz"
      crossorigin="anonymous"
    ></script>

    <!-- Auto-remove flash alerts after 5 seconds -->
    <script>
      setTimeout(() => {
        document.querySelectorAll(".alert").forEach((alert) => {
          alert.remove();
        });
      }, 5000);
    </script>

    <!-- Page Specific Scripts -->
    <%- typeof scripts !== 'undefined' ? scripts : '' %>
  </body>
</html>
