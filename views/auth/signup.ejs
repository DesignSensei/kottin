<!-- view/auth/signup.ejs -->

<div
  data-w-id="9fa109aa-712e-b709-7fec-65d08001e45f"
  class="content-center-tablet"
  style="opacity: 0; transform: translate3d(0, 10%, 0) scale3d(1, 1, 1)"
>
  <h2
    class="display-11 mg-top-default"
    style="color: rgb(14, 24, 16); margin-bottom: 64px"
  >
    Sign Up to
    <span class="freakum-brand">Freakum</span>
  </h2>
  <div id="login-form-wrapper" class="form-wrapper width-320px">
    <form id="signup-form" name="signup-form" aria-label="Sign Up" novalidate>
      <!-- CSRF token -->
      <input type="hidden" name="_csrf" value="<%= csrfToken %>" />

      <!-- First Name -->
      <div class="inner-container _487px _100-tablet">
        <input
          id="firstName"
          name="firstName"
          type="text"
          class="input w-input"
          placeholder="First Name"
          minlength="2"
          required
        />

        <div class="field-error" data-for="firstName" aria-live="polite"></div>
      </div>

      <!-- Last Name -->
      <div class="inner-container _487px _100-tablet mg-top-default">
        <input
          id="lastName"
          name="lastName"
          type="text"
          class="input w-input"
          placeholder="Last Name"
          minlength="2"
          required
        />

        <div class="field-error" data-for="lastName" aria-live="polite"></div>
      </div>

      <!-- Email -->
      <div class="inner-container _487px _100-tablet mg-top-default">
        <input
          id="email"
          name="email"
          type="email"
          class="input w-input"
          placeholder="Email"
          required
        />

        <div class="field-error" data-for="email" aria-live="polite"></div>
      </div>

      <!-- Password -->
      <div class="inner-container _487px _100-tablet mg-top-default">
        <div class="password-wrapper">
          <input
            id="password"
            name="password"
            type="password"
            class="input w-input"
            placeholder="Password"
            minlength="8"
            required
          />
          <button
            type="button"
            id="togglePassword"
            aria-label="Show password"
            class="password-toggle"
          >
            <i data-feather="eye-off"></i>
          </button>
        </div>

        <div class="field-error" data-for="password" aria-live="polite"></div>
      </div>

      <!-- Confirm Password -->
      <div class="inner-container _487px _100-tablet mg-top-default">
        <div class="password-wrapper">
          <input
            id="confirmPassword"
            name="confirmPassword"
            type="password"
            class="input w-input"
            placeholder="Confirm Password"
            minlength="8"
            required
          />
          <button
            type="button"
            id="toggleConfirmPassword"
            aria-label="Show password"
            class="password-toggle"
          >
            <i data-feather="eye-off"></i>
          </button>
        </div>

        <div
          class="field-error"
          data-for="confirmPassword"
          aria-live="polite"
        ></div>
      </div>

      <!-- Terms & Privacy -->
      <div
        class="utp---typography-grid-item _55 inner-container _487px _100-tablet mg-top-default"
        style="width: 100%"
      >
        <label class="checkbox-container paragraph-large">
          <input type="checkbox" name="agree" required />
          <span class="checkmark"></span>
          <span class="terms-text"
            >I agree to the
            <a
              href="/terms"
              class="primary-link"
              style="text-decoration: none; color: #d25782"
              >Terms of Service</a
            >
            and
            <a
              href="/privacy"
              class="primary-link"
              style="text-decoration: none; color: #d25782"
              >Privacy Policy</a
            >.</span
          >
        </label>

        <div class="field-error" data-for="agree" aria-live="polite"></div>
      </div>

      <!-- Sign up button -->
      <div class="buttons-row left mg-top-default">
        <button
          type="submit"
          id="submit-button"
          class="primary-button-2 w-button"
        >
          Sign Up
        </button>
      </div>

      <!-- Already have an account? -->
      <div
        class="inner-container _487px _100-tablet mg-top-default"
        style="text-align: center"
      >
        <p class="paragraph-large">
          Already have an account?
          <a
            href="/login"
            class="primary-link"
            style="text-decoration: none; color: #d25782"
            >Log In</a
          >
        </p>
      </div>
    </form>
  </div>
</div>
