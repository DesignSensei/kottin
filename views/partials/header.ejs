<!-- views/partials/header.ejs -->

<!-- Primary SEO -->
<meta
  name="description"
  content="Kottin is a minimalist apparel and lifestyle brand creating refined, high-quality essentials. Clean design, effortless comfort, and timeless style—made for everyday wear."
/>

<meta
  name="keywords"
  content="Kottin, minimalist apparel, minimalist clothing, essentials, elevated basics, premium basics, timeless style, modern minimal, everyday wear, refined clothing, quality wardrobe staples, minimalist lifestyle, street minimal, capsule wardrobe, unisex essentials, t-shirts, hoodies, sweatshirts, sweatpants, loungewear, lifestyle brand"
/>

<meta name="author" content="Kottin" />
<meta name="viewport" content="width=device-width, initial-scale=1" />

<!-- Open Graph -->
<meta property="og:title" content="Kottin — Minimal Essentials, Made Well" />
<meta
  property="og:description"
  content="Refined essentials with clean lines and calm confidence. Versatile, comfortable pieces built for everyday life."
/>
<meta property="og:image" content="https://cdn.kottin.com/assets/images/og-cover.jpg" />
<meta property="og:type" content="website" />
<meta property="og:url" content="https://kottin.com" />

<!-- Twitter -->
<meta name="twitter:card" content="summary_large_image" />
<meta property="twitter:title" content="Kottin — Minimal Essentials, Made Well" />
<meta
  property="twitter:description"
  content="Minimalist staples with a refined fit and an effortless feel. Timeless by design."
/>
<meta property="twitter:image" content="https://cdn.kottin.com/assets/images/og-cover.jpg" />
<meta property="twitter:url" content="https://kottin.com" />

<meta name="generator" content="Kottin" />

<!-- CSRF Token Meta Tag -->
<meta name="csrf-token" content="<%= csrfToken %>" />

<!-- Bootstrap CSS -->
<link
  href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css"
  rel="stylesheet"
  integrity="sha384-QWTKZyjpPEjISv5WaRU9OFeRpok6YctnYmDr5pNlyT2bRjXh0JMhjY6hW+ALEwIH"
  crossorigin="anonymous"
/>

<!-- Page-specific Stylesheets -->
<%- typeof styles !== "undefined" ? styles : "" %>

<!-- Styles -->
<link href="/css/main.css" rel="stylesheet" type="text/css" />

<!-- Font Preconnects -->
<link rel="preconnect" href="https://fonts.googleapis.com" />
<link rel="preconnect" href="https://fonts.gstatic.com" crossorigin />

<!-- Fonts -->
<link
  rel="stylesheet"
  href="https://fonts.googleapis.com/css2?family=Inter:wght@300;400;500;600;700&display=swap"
/>

<!-- Head Scripts -->
<script
  src="https://ajax.googleapis.com/ajax/libs/webfont/1.6.26/webfont.js"
  type="text/javascript"
></script>

<script src="/js/i.js"></script>

<script type="text/javascript">
  !(function (o, c) {
    var n = c.documentElement,
      t = " w-mod-";
    ((n.className += t + "js"),
      ("ontouchstart" in o || (o.DocumentTouch && c instanceof DocumentTouch)) &&
        (n.className += t + "touch"));
  })(window, document);
</script>

